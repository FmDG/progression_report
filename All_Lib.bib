	keywords = {North Atlantic, Heinrich events, alkenone, IODP, IRD, SST, subtropical gyre},
	language = {en},
	note = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2012PA002354},
	number = {1},
	pages = {153--163},
	title = {Warming of surface waters in the mid-latitude {North} {Atlantic} during {Heinrich} events},
	url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2012PA002354},
