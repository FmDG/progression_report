	language = {en},
	month = feb,
	number = {2},
	pages = {181--196},
	title = {Secular change in metamorphism and the onset of global plate tectonics},
	url = {https://pubs.geoscienceworld.org/msa/ammin/article/103/2/181/527049/Secular-change-in-metamorphism-and-the-onset-of},
	urldate = {2021-03-03},
