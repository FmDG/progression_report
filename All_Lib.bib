	note = {Publisher: Public Library of Science},
	number = {3},
	pages = {e34234},
	title = {Dietary {Heterogeneity} among {Western} {Industrialized} {Countries} {Reflected} in the {Stable} {Isotope} {Ratios} of {Human} {Hair}},
