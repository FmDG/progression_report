	issn = {0263-4929, 1525-1314},
	journal = {Journal of Metamorphic Geology},
	language = {en},
	month = oct,
	number = {8},
	pages = {1049--1078},
	title = {Seemingly disparate temperatures recorded in coexisting granulite facies lithologies},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/jmg.12500},
	urldate = {2021-03-03},
