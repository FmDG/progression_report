	keywords = {Citizen science, Community-based monitoring, Disaster risk reduction, Participatory, Tungurahua},
	month = aug,
	number = {1},
	pages = {11},
	shorttitle = {Risk reduction through community-based monitoring},
	title = {Risk reduction through community-based monitoring: the vig{\'\i}as of {Tungurahua}, {Ecuador}},
