	issn = {1525-2027},
	journal = {Geochemistry, Geophysics, Geosystems},
	keywords = {firn air, gas isotopes, isotope fractionation, paleothermometer, Thermal diffusion, thermal diffusion sensitivity},
	month = jul,
	note = {Publisher: John Wiley \& Sons, Ltd},
	number = {7},
	title = {Thermal fractionation of air in polar firn by seasonal temperature gradients},
