	doi = {10.1016/j.quascirev.2019.03.031},
	issn = {02773791},
	journal = {Quaternary Science Reviews},
	language = {en},
	month = may,
	pages = {92--107},
	title = {Distinguishing current effects in sediments delivered to the ocean by ice. {I}. {Principles}, methods and examples},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0277379119300769},
	urldate = {2021-02-20},
	volume = {212},
	year = {2019},
	bdsk-url-1 = {https://linkinghub.elsevier.com/retrieve/pii/S0277379119300769},
