@article{rosenthalPacificOceanHeat2013,
	abstract = {Observed increases in ocean heat content (OHC) and temperature are robust indicators of global warming during the past several decades. We used high-resolution proxy records from sediment cores to extend these observations in the Pacific 10,000 years beyond the instrumental record. We show that water masses linked to North Pacific and Antarctic intermediate waters were warmer by 2.1 $\pm$ 0.4$\,^{\circ}$C and 1.5 $\pm$ 0.4$\,^{\circ}$C, respectively, during the middle Holocene Thermal Maximum than over the past century. Both water masses were {\textasciitilde}0.9$\,^{\circ}$C warmer during the Medieval Warm period than during the Little Ice Age and {\textasciitilde}0.65$\,^{\circ}$ warmer than in recent decades. Although documented changes in global surface temperatures during the Holocene and Common era are relatively small, the concomitant changes in OHC are large.},
