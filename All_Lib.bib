	shorttitle = {Neodymium isotopic composition and concentration in the western {North} {Atlantic} {Ocean}},
	title = {Neodymium isotopic composition and concentration in the western {North} {Atlantic} {Ocean}: {Results} from the {GEOTRACES} {GA02} section},
	url = {https://www.sciencedirect.com/science/article/pii/S0016703715007139},
