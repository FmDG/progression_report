	pages = {129--145},
	shorttitle = {What caused {Earth}'s temperature variations during the last 800,000 years?},
	title = {What caused {Earth}'s temperature variations during the last 800,000 years? {Data}-based evidence on radiative forcing and constraints on climate sensitivity},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0277379109003291},
	urldate = {2021-02-02},
