	shorttitle = {Sr isotopes and pore fluid chemistry in carbonate sediment of the {Ontong} {Java} {Plateau}},
	title = {Sr isotopes and pore fluid chemistry in carbonate sediment of the {Ontong} {Java} {Plateau}: {Calcite} recrystallization rates and evidence for a rapid rise in seawater {Mg} over the last 10 million years},
