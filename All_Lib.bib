	number = {11},
	pages = {1437--1454},
	shorttitle = {Neogene ice volume and ocean temperatures},
	title = {Neogene ice volume and ocean temperatures: {Insights} from infaunal foraminiferal {Mg}/{Ca} paleothermometry},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1002/2015PA002833},
	urldate = {2022-03-06},
