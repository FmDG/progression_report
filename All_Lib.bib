	issn = {1814-9332},
	journal = {Climate of the Past},
	language = {en},
	month = nov,
	number = {6},
	pages = {1959--1983},
	title = {Bispectra of climate cycles show how ice ages are fuelled},
	url = {https://cp.copernicus.org/articles/15/1959/2019/},
	urldate = {2021-02-13},
	volume = {15},
	year = {2019},
	bdsk-url-1 = {https://cp.copernicus.org/articles/15/1959/2019/},
