	issn = {0277-3791},
	journal = {Quaternary Science Reviews},
	keywords = {Unread, Paleoclimate, Southern Ocean, Antarctic Climate, Neodymium isotopes, Ocean Circulation, Paleocirculation, Sortable Silt},
	language = {en},
	month = may,
	pages = {106915},
	title = {Neodymium isotope evidence for coupled {Southern} {Ocean} circulation and {Antarctic} climate throughout the last 118,000 years},
