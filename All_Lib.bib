	author = {Bailey, Ian and Hole, Georgia M. and Foster, Gavin L. and Wilson, Paul A. and Storey, Craig D. and Trueman, Clive N. and Raymo, Maureen E.},
	doi = {10.1016/j.quascirev.2013.06.004},
	file = {ScienceDirect Snapshot:/Users/frisodegraaf/Zotero/storage/C4HXM95R/S0277379113002151.html:text/html},
	issn = {0277-3791},
