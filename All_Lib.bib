	journal = {Quaternary Science Reviews},
	keywords = {Unread},
	language = {en},
	month = mar,
	pages = {107404},
	shorttitle = {Neodymium isotopes as a paleo-water mass tracer},
	title = {Neodymium isotopes as a paleo-water mass tracer: {A} model-data reassessment},
