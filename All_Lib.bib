	language = {en},
	month = dec,
	number = {3},
	pages = {261--293},
	title = {The {Anthropogenic} {Greenhouse} {Era} {Began} {Thousands} of {Years} {Ago}},
	url = {http://link.springer.com/10.1023/B:CLIM.0000004577.17928.fa},
	urldate = {2020-11-28},
