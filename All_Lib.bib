	journal = {Earth and Planetary Science Letters},
	keywords = {ice cores, Katmai, mass-independent fractionation, stratosphere, sulfur, volcanoes},
	language = {en},
	month = sep,
	pages = {113--119},
	title = {Stratospheric eruptions from tropical and extra-tropical volcanoes constrained using high-resolution sulfur isotopes in ice cores},
	url = {https://www.sciencedirect.com/science/article/pii/S0012821X19303395},
	urldate = {2021-06-10},
	volume = {521},
	year = {2019},
