	issn = {2191-5040},
	journal = {Journal of Applied Volcanology},
	keywords = {Unread, Fatalities, Population, Volcano Fatality Index, Volcanoes},
	month = feb,
	number = {1},
	pages = {2},
	title = {A statistical analysis of the global historical volcanic fatalities record},
	url = {https://doi.org/10.1186/2191-5040-2-2},
