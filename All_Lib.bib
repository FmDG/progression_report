	number = {46},
	pages = {14191--14196},
	title = {Collapse of the {West} {Antarctic} {Ice} {Sheet} after local destabilization of the {Amundsen} {Basin}},
	url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1512482112},
	urldate = {2020-12-01},
	volume = {112},
