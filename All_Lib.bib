	language = {en},
	month = apr,
	pages = {264--291},
	title = {Modeling the effects of diagenesis on carbonate clumped-isotope values in deep- and shallow-water settings},
	url = {https://www.sciencedirect.com/science/article/pii/S001670371830067X},
	urldate = {2021-06-12},
