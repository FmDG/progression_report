	month = jun,
	number = {2},
	pages = {357--374},
	shorttitle = {Carbonate clumped isotope paleothermometry},
	title = {Carbonate clumped isotope paleothermometry: a review of recent advances in {CO2} gas evolution, purification, measurement and standardization techniques},
