	keywords = {Unread},
	language = {en},
	month = jan,
	pages = {142--159},
	title = {Mg/{Ca}, {Sr}/{Ca} and {Ca} isotope ratios in benthonic foraminifers related to test structure, mineralogy and environmental controls},
