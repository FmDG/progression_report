	file = {Accepted Version:/Users/frisodegraaf/Zotero/storage/D48EC5Z9/Kutterolf et al. - 2019 - Milankovitch frequencies in tephra records at volc.pdf:application/pdf;ScienceDirect Snapshot:/Users/frisodegraaf/Zotero/storage/88QR4H8V/S0277379118301768.html:text/html},
	issn = {0277-3791},
